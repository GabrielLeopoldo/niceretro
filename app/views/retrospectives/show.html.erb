<h1 class="ls-title-intro ls-ico-eye"><%= @retrospective.title %> - <%= l @retrospective.date.to_date, format: :default %></h1>

<!-- Actions -->
<div class="ls-box ls-board-box">
  <header class="ls-info-header">
    <h2 class="ls-title-3">Ações</h2>
  </header>
  <%= render partial: 'shared/forms/demand', locals: { object: @demand, classes: 'ls-form ls-form-horizontal' } %>

  <table class="ls-table ls-table-striped" id="demands-table">
    <thead>
      <th>Ação</th>
      <th>Responsável</th>
      <th>Status</th>
      <th class="ls-width-250">Ações</th>
    </thead>
    <tbody>
      <% @demands.each do |d| %>
        <tr data-id="<%= d.id %>">
          <td class="description"><%= d.description %></td>
          <td class="user"><%= d.user %></td>
          <td>
            <div data-ls-module="switchButton" class="ls-switch-btn">
              <%= check_box_tag '', '1',  d.status %>
              <label class="ls-switch-label" ls-switch-off="Pendente" ls-switch-on="Concluída"><span></span></label>
            </div>
          <%= link_to '', update_status_demand_path(d.id), remote: true, class: 'ls-display-none' %>
          </td>
          <td class="actions">
            <div class="ls-group-btn">
              <%= link_to '', edit_retrospective_demand_path(@retrospective.id, d.id), remote: true, class: 'ls-btn ls-ico-pencil', title: 'Editar' %>
              <%= link_to '', [@retrospective, d], class: 'ls-btn-danger ls-ico-close', method: :delete, remote: true, title: 'Deletar' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<!-- Pending Actions -->
<% if @latest_demands.count > 0 %>
  <div class="ls-box ls-board-box">
    <header class="ls-info-header">
      <h2 class="ls-title-3">Ações Pendentes</h2>
    </header>
    <table class="ls-table ls-table-striped" id="pending-demands-table">
      <thead>
        <th>Ação</th>
        <th>Responsável</th>
        <th>Status</th>
        <th class="ls-width-250">Ações</th>
      </thead>
      <tbody>
        <% @latest_demands.each do |d| %>
          <tr data-id="<%= d.id %>">
            <td><%= d.description %></td>
            <td><%= d.user %></td>
            <td>
              <div data-ls-module="switchButton" class="ls-switch-btn">
                <%= check_box_tag '', '1',  d.status %>
                <label class="ls-switch-label" ls-switch-off="Pendente" ls-switch-on="Concluída"><span></span></label>
              </div>
            <%= link_to '', update_status_demand_path(d.id), remote: true, class: 'ls-display-none' %>
            </td>
            <td>
              <%= link_to '', [@retrospective, d], class: 'ls-btn-danger ls-ico-close', method: :delete, remote: true, title: 'Deletar' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

